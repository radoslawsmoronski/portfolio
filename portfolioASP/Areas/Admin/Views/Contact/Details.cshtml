@model EmailMessage
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">@Localizer["EmailTitle"] - @Model.Subject</h1>

                <div class="detail-box">
                    <h5>@Localizer["Sender"]</h5>
                    @Model.Name (@Model.Email)
                </div>

                <div class="detail-box">
                    <h5>@Localizer["Date"]</h5>
                    @Model.SentAt
                </div>

                <div class="detail-box">
                    <h5>@Localizer["Subject"]</h5>
                    @Model.Subject
                </div>

                <div class="detail-box">
                    <h5>@Localizer["Content"]</h5>
                    @{
                        if (Model.Content != null)
                        {
                            string title = Model.Content.Replace("\r\n", "<br />");
                            @Html.Raw(title)
                        }
                    }
                </div>


                <a asp-controller="Contact" asp-action="Index" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["BackButton"]</a>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>