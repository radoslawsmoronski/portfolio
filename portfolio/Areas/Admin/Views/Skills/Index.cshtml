@model List<Skill>

<style>
    #box {
        padding-top: 10%;
        margin-bottom: 10%;
    }

    #box th {
        background-color: #1E2427;
        color: white;
    }

    #box td {
        background-color: #151a1c;
        color: white;
        border-bottom: 1px solid #1E2427;
    }
</style>

<section id="box">
    <div class="container">
        <table class="table bg-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Umiejętność</th>
                    <th scope="col">Obrazek</th>
                    <th scope="col">
                        <a asp-controller="Skills" asp-action="Create" class="btn btn-dark" style="width: 50%; float:right;">
                            <i class="bi bi-plus-circle"></i>
                            Dodaj
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td><img height="30px" width="30px" src="../@obj.ImageUrl"></img></td>
                        <td class="text-center">
                            <a asp-controller="Skills" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark" style="width: 40%; margin-right: 15px;">
                                <i class="bi bi-pen"></i>
                                Edytuj
                            </a>
                            <a asp-controller="Skills" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" style="width: 30%;">
                                <i class="bi bi-trash"></i>
                                Usuń
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>