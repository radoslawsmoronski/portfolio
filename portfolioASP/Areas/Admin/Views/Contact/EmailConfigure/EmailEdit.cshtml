@model EmailSettings
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">@Localizer["EmailEdit"]</h1>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["Email"]</label>
                            <input asp-for="Email" class="form-control" placeholder="@Localizer["EmailPlaceholder"]">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["Password"]</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer["PasswordPlaceholder"]">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["SMTPServer"]</label>
                            <input asp-for="SmtpServer" class="form-control" placeholder="@Localizer["SMTPServerPlaceholder"]">
                            <span asp-validation-for="SmtpServer" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                        <label class="text-white">@Localizer["SMTPPort"]</label>
                            <input asp-for="SmtpPort" class="form-control" placeholder="@Localizer["SMTPPortPlaceholder"]">
                            <span asp-validation-for="SmtpPort" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                        <input asp-for="Encryption" class="form-check-input" type="checkbox">
                        <label class="form-check-label">
                            @Localizer["SMTPEncryption"]
                        </label>
                        <p>@Localizer["SMTPEncryptionDecription"]</p>
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["EditButton"]</button>
                            <a asp-controller="contact" asp-action="emailconfigure" class="btn btn-outline-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["BackButton"]</a>
                        </div>
                    </form>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}