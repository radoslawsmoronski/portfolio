@model Skill

<style>
    #box {
        padding-top: 10%;
        margin-bottom: 10%;
    }

    #box th {
        background-color: #1E2427;
        color: white;
    }

    #box td {
        background-color: #151a1c;
        color: white;
        border-bottom: 1px solid #1E2427;
    }

    .box {
        background-color: #151a1c;
    }
</style>

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                    <h1 class="text-white text-center mb-5">Edycja Umiejętności</h1>
                    <form method="post">
                        <div class="form-group mb-4">
                            <label for="exampleFormControlInput1" class="text-white">Nazwa Umiejętności</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="exampleFormControlFile1">Obrazek</label>
                            <input asp-for="ImageUrl" class="form-control-file" id="exampleFormControlFile1">
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-dark mb-2">Edytuj</button>
                        <a asp-controller="skills" asp-action="index" class="btn btn-outline-dark mb-2">Wróc</a>
                    </form>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}