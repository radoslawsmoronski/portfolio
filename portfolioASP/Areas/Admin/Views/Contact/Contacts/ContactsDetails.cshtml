@model Contact
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-0 col-lg-3 col-md-2"></div>
            <div class="col-12 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">@Localizer["ContactDetails"]</h1>

                <div class="detail-box">
                    <h5>@Localizer["Name"]</h5>
                    @Model.Name
                </div>

                <div class="detail-box">
                    <h5>@Localizer["Content"]</h5>
                    @Model.Content
                </div>

                <div class="detail-box">
                    <h5>@Localizer["UrlAddress"]</h5>
                    @{
                        if(Model.UrlAddress != null)
                        {
                            <a class="text-body text-decoration-none" href="@Model.UrlAddress" target="_blank">@Model.UrlAddress</a>
                        }
                        else
                        {
                            <span>Brak Adresu</span>
                        }
                    }
                </div>

                <div class="detail-box">
                    <h5>@Localizer["Icon"]</h5>
                    <i class="@(Model.Icon != null ? Model.Icon : "bi bi-person-rolodex")"></i>
                </div>

                <a asp-controller="Contact" asp-action="ContactsIndex" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["BackButton"]</a>
            </div>
            <div class="col-0 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>