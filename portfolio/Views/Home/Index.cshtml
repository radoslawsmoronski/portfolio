@{
    ViewData["Title"] = "Home Page";
}

<section id="welcome" class="mu-5" style="min-height: 400px;">
    <div class="row" style="height: 100vh;">
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="row">
                <div class="col-lg-3"></div>
