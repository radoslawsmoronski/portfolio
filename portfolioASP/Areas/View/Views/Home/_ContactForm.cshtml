@model ContactForm

<form method="post" class="m-lg-0 m-3" style="width: 100%">

    <div class="form-group mb-lg-3 mb-5">
        <input asp-for="Email" type="email" class="form-control" placeholder="Adres Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-lg-3 mb-5">
        <input asp-for="Name" class="form-control" placeholder="Imię">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-lg-3 mb-5">
        <input asp-for="Subject" class="form-control" placeholder="Temat">
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group mb-lg-3 mb-5">
        <textarea asp-for="Content" class="form-control" placeholder="Treść"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark">Wyślij Wiadomość</button>
</form>
