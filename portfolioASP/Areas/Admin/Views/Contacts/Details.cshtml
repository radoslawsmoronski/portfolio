@model Contact
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">Szczegóły kontaktu</h1>

                <div class="detail-box">
                    <h5>Nazwa</h5>
                    @Model.Name
                </div>

                <div class="detail-box">
                    <h5>Zawartość</h5>
                    @Model.Content
                </div>

                <div class="detail-box">
                    <h5>Adres</h5>
                    @{
                        if(Model.UrlAddress != null)
                        {
                            <a class="text-body text-decoration-none" href="@Model.UrlAddress" target="_blank">@Model.UrlAddress</a>
                        }
                        else
                        {
                            <span>Brak Adresu</span>
                        }
                    }
                </div>

                <div class="detail-box">
                    <h5>Ikona</h5>
                    <i class="@(Model.Icon != null ? Model.Icon : "bi bi-person-rolodex")"></i>
                </div>

                <a asp-controller="Contacts" asp-action="Index" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">Wróc</a>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}