@model Welcome
<link rel="stylesheet" href="~/css/admin/datails.css" asp-append-version="true" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">Sekcja Witam</h1>

                <div class="detail-box">
                    <h5>Nagłowek</h5>
                    @Model.Header
                </div>

                <div class="detail-box">
                    <h5>Opis</h5>
                    @Model.Description
                </div>

                <a asp-controller="Welcome" asp-action="Edit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">Edytuj</a>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>
