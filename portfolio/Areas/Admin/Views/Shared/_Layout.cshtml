<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - portfolioASP.</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/portfolioASP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>
<body>
    <div class="row layout-row">
        <div class="sidebar col-12 col-lg-2 col-md-3">
            <div class="sidebar-elements">
                <ul>
                    <li class="text-white m-2">
                        <a class="btn btn-dark">O mnie</a>
                    </li>
                    <li class="text-white m-2">
                        <a asp-area="Admin" asp-controller="Skills" asp-action="Index" class="btn btn-dark">Umiejętności</a>
                    </li>
                    <li class="text-white m-2">
                        <a asp-area="Admin" asp-controller="Projects" asp-action="Index" class="btn btn-dark">Projekty</a>
                    </li>
                    <li class="text-white m-2">
                        <a class="btn btn-dark">Kontakt</a>
                    </li>
                    <li class="text-white m-2">
                        <a asp-area="View" asp-controller="Home" asp-action="Index" class="btn btn-danger">Wróc</a>
                    </li>
                </ul>
            </div>
        </div>
                   
        <div class="content-container col-12 col-lg-10 col-md-9">
            <partial name="_Notification" />
            @RenderBody()
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
