@model Project
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">@(Model.Id != 0 ? Localizer["Edit"] : Localizer["Add"]) @Localizer["Project"]</h1>
                    <form method="post" enctype="multipart/form-data">
                        <input asp-for="Id" hidden />
                        <input asp-for="ImageUrl" hidden />
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["Name"]</label>
                            <input asp-for="Name" class="form-control" placeholder="@Localizer["NamePlaceholder"]">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                        <label class="text-white">@Localizer["Description"]</label>
                            <textarea asp-for="Description" class="form-control" placeholder="@Localizer["DescriptionPlaceholder"]"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["GitRepository"]</label>
                            <input asp-for="GitRepositoryUrl" class="form-control" placeholder="@Localizer["GitRepositoryPlaceholder"]">
                            <span asp-validation-for="GitRepositoryUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="text-white">@Localizer["Image"]</label>
                            <input type="file" name="file" asp-for="ImageUrl" class="form-control border-0 shadow" />
                        </div>
                        <div class="row">
                            @if(Model.Id != 0 )
                            {
                                <button type="submit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["EditButton"]</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["AddButton"]</button>
                            }
                            <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["BackButton"]</a>
                        </div>
                    </form>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}