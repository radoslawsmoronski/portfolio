@model NavbarLogo

<style>
    #box {
        padding-top: 10%;
        margin-bottom: 10%;
    }

    #box th {
        background-color: #1E2427;
        color: white;
    }

    #box td {
        background-color: #151a1c;
        color: white;
        border-bottom: 1px solid #1E2427;
    }

    .box {
        background-color: #151a1c;
    }


</style>

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">Edytowanie - Nagłowek menu nawigacji</h1>
                    <form method="post" enctype="multipart/form-data">
                        <input asp-for="ImageUrl" hidden />
                        <div class="form-group mb-4">
                            <label for="exampleFormControlInput1" class="text-white">Treść</label>
                            <textarea asp-for="Title" class="form-control"></textarea>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="exampleFormControlInput1" class="text-white">Obrazek</label>
                            <input type="file" name="file" asp-for="ImageUrl" class="form-control border-0 shadow" />                   
                            @if(Model.ImageUrl != null)
                            {
                                <a asp-controller="NavbarLogo" asp-action="DeleteImage" class="btn btn-outline-dark col-12">Usuń zdjęcie</a>
                            }                        
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">Edytuj</button>
                            <a asp-controller="NavbarLogo" asp-action="Index" class="btn btn-outline-dark mb-2 col-12 col-md-6 col-lg-3">Wróc</a>
                        </div>
                    </form>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}