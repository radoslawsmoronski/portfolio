@model WebsiteTitle
<link rel="stylesheet" href="~/css/admin/datails.css" />

<section id="box">
    <div class="container">
        <div class="row">
            <div class="col-1 col-lg-3 col-md-2"></div>
            <div class="col-10 col-lg-6 col-md-8 box p-5">
                <h1 class="text-white text-center mb-5">@Localizer["Title"]</h1>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["Content"] (ENG)</label>
                            <input asp-for="TitleENG" class="form-control" placeholder="@Localizer["ContentPlaceholder"]"></input>
                        </div>
                        <div class="form-group mb-4">
                            <label class="text-white">@Localizer["Content"] (PL)</label>
                            <input asp-for="TitlePL" class="form-control" placeholder="@Localizer["ContentPlaceholder"]"></input>
                        </div>
                        <div class="form-group mb-3">
                            <label class="text-white">@Localizer["Image"]</label>
                            <input type="file" name="file" asp-for="ImageUrl" class="form-control border-0 shadow" />
                            @if (Model.ImageUrl != null)
                            {
                                <a asp-controller="General" asp-action="DeleteWebsiteTitleImage" class="btn btn-outline-dark col-12">@Localizer["RemoveImageButton"]</a>
                            }
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["EditButton"]</button>
                            <a asp-controller="General" asp-action="Index" class="btn btn-outline-dark mb-2 col-12 col-md-6 col-lg-3">@Localizer["BackButton"]</a>
                        </div>
                    </form>
            </div>
            <div class="col-1 col-lg-3 col-md-2"></div>
        </div>
    </div>
</section>